@model List<ProductModel>
<h2>Products</h2>

<p><a href="/Products/Create">Add New Product</a></p>

<table>
    <thead>
        <tr><th>Name</th><th>Price</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@string.Format("{0:C}", product.Price)</td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@product.Id" onsubmit="return confirm('Delete this product?');">
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
