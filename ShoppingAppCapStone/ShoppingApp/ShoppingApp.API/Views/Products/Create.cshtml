@model ProductModel
<h2>Add Product</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <button type="submit">Add</button>
</form>
